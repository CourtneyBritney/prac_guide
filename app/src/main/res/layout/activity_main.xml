<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Screen 1: Add Items -->
        <LinearLayout
            android:id="@+id/screenAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item name (e.g., Passport)"
                android:inputType="textCapWords"
                android:maxLength="40"
                android:singleLine="true" />

            <EditText
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category (e.g., Clothing)"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:singleLine="true" />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity (>= 1)"
                android:inputType="number"
                android:maxLength="3"
                android:singleLine="true" />

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment (optional)"
                android:maxLength="60" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Packing List"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnViewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Packing List"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Screen 2: List -->
        <LinearLayout
            android:id="@+id/screenList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <!-- ðŸŸ© NEW: Clear All button -->
            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear All Items"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Add Items"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
